// This is your Prisma schema file for production deployment on Vercel
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model with role-based access control
enum UserRole {
  ADMIN
  PROPERTY_MANAGER
  MAINTENANCE_STAFF
  RESIDENT
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?
  role          UserRole  @default(RESIDENT)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  property      Property?  @relation(fields: [propertyId], references: [id])
  propertyId    String?
  maintenanceRequests MaintenanceRequest[] @relation("RequestedBy")
  assignedRequests    MaintenanceRequest[] @relation("AssignedTo")
  notifications       Notification[]
  comments            Comment[]
}

// Building model (e.g., apartment complex)
model Building {
  id            String    @id @default(cuid())
  name          String
  address       String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  properties    Property[]
  announcements Announcement[]
}

// Property model (e.g., individual apartment unit)
model Property {
  id            String    @id @default(cuid())
  unitNumber    String
  address       String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  building      Building  @relation(fields: [buildingId], references: [id])
  buildingId    String
  residents     User[]
  maintenanceRequests MaintenanceRequest[]
}

// Maintenance request status
enum RequestStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// Priority levels
enum Priority {
  LOW
  MEDIUM
  HIGH
  EMERGENCY
}

// Maintenance request model
model MaintenanceRequest {
  id            String    @id @default(cuid())
  title         String
  description   String
  status        RequestStatus @default(PENDING)
  priority      Priority
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  completedAt   DateTime?
  images        String[]
  requester     User      @relation("RequestedBy", fields: [requesterId], references: [id])
  requesterId   String
  assignee      User?     @relation("AssignedTo", fields: [assigneeId], references: [id])
  assigneeId    String?
  property      Property  @relation(fields: [propertyId], references: [id])
  propertyId    String
  comments      Comment[]
}

// Comment model for maintenance requests
model Comment {
  id            String    @id @default(cuid())
  content       String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  request       MaintenanceRequest @relation(fields: [requestId], references: [id])
  requestId     String
  user          User      @relation(fields: [userId], references: [id])
  userId        String
}

// Announcement model for building-wide notifications
model Announcement {
  id            String    @id @default(cuid())
  title         String
  content       String
  type          String    @default("general")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  expiresAt     DateTime?
  building      Building  @relation(fields: [buildingId], references: [id])
  buildingId    String
}

// Notification model for user-specific notifications
model Notification {
  id            String    @id @default(cuid())
  title         String
  message       String
  isRead        Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  user          User      @relation(fields: [userId], references: [id])
  userId        String
}
