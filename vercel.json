{
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "same-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(self), microphone=()"
        }
      ]
    }
  ],
  "regions": ["syd1"],
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "env": {
    "NEXT_PUBLIC_ENABLE_NOTIFICATIONS": "true",
    "NEXTAUTH_SECRET": "${NEXTAUTH_SECRET}",
    "NEXTAUTH_URL": "https://info1111final.vercel.app",
    "NEXT_PUBLIC_API_URL": "https://info1111final.vercel.app/api",
    "NEXT_PUBLIC_ENABLE_ANALYTICS": "true",
    "NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE": "false",
    "DATABASE_URL": "${DATABASE_URL}"
  },
  "github": {
    "silent": true,
    "autoJobCancelation": true
  },
  "functions": {
    "src/app/api/generate-report/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    },
    "src/app/api/announcements/*.ts": {
      "memory": 512,
      "maxDuration": 30
    },
    "src/app/api/maintenance/*.ts": {
      "memory": 512,
      "maxDuration": 30
    },
    "src/app/api/notifications/*.ts": {
      "memory": 512,
      "maxDuration": 30
    }
  }
}
