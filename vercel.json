{
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "same-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(self), microphone=()"
        }
      ]
    }
  ],
  "regions": ["syd1"],
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_API_URL": "https://info1111final.vercel.app/api",
    "NEXTAUTH_URL": "https://info1111final.vercel.app",
    "NEXT_PUBLIC_APP_NAME": "Property Maintenance System",
    "NEXT_PUBLIC_APP_DESCRIPTION": "Property maintenance request management system",
    "NEXT_PUBLIC_CONTACT_EMAIL": "support@example.com",
    "NEXT_PUBLIC_ENABLE_ANALYTICS": "true",
    "NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE": "false",
    "NEXT_PUBLIC_ENABLE_NOTIFICATIONS": "true",
    "NEXT_PUBLIC_MAX_REQUESTS_PER_PAGE": "10",
    "NEXT_PUBLIC_DEFAULT_PRIORITY": "medium",
    "RATE_LIMIT_REQUESTS": "100",
    "RATE_LIMIT_WINDOW_MS": "900000",
    "SECURITY_HEADERS_ENABLED": "true",
    "CORS_ALLOWED_ORIGINS": "https://info1111final.vercel.app"
  },
  "github": {
    "silent": true,
    "autoJobCancelation": true
  },
  "functions": {
    "src/app/api/generate-report/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    },
    "src/app/api/announcements/*.ts": {
      "memory": 512,
      "maxDuration": 30
    },
    "src/app/api/maintenance/*.ts": {
      "memory": 512,
      "maxDuration": 30
    },
    "src/app/api/notifications/*.ts": {
      "memory": 512,
      "maxDuration": 30
    }
  }
}
